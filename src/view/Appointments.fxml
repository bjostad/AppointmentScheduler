<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Appointments">
    <children>
        <Label layoutX="49.0" layoutY="14.0" text="Appointment Scheduler">
        <font>
            <Font size="22.0" />
        </font>
        </Label>
        <Button fx:id="newAppointmentButton" layoutX="816.0" layoutY="17.0" mnemonicParsing="false" onAction="#onNewAppointmentButton" prefHeight="26.0" prefWidth="126.0" text="New Appointment" />
        <Button fx:id="editAppointmentButton" layoutX="975.0" layoutY="17.0" mnemonicParsing="false" onAction="#onEditAppointmentButton" prefHeight="26.0" prefWidth="126.0" text="Edit Appointment" />
        <Button fx:id="deleteAppointmentButton" layoutX="1132.0" layoutY="17.0" mnemonicParsing="false" onAction="#onDeleteAppointmentButton" prefHeight="26.0" prefWidth="126.0" text="Delete Appointment" />
        <TableView fx:id="appointmentTable" layoutX="18.0" layoutY="54.0" prefHeight="566.0" prefWidth="1258.0">
            <columns>
                <TableColumn fx:id="appointmentIdColumn" prefWidth="35.0" text="ID" />
                <TableColumn fx:id="startDateTimeColumn" prefWidth="116.0" text="Start Time/Date" />
                <TableColumn fx:id="endDateTimeColumn" prefWidth="112.0" text="End Time/Date" />
                <TableColumn fx:id="titleColumn" prefWidth="177.0" text="Title" />
                <TableColumn fx:id="descriptionColumn" prefWidth="189.0" text="Description" />
                <TableColumn fx:id="locationColumn" prefWidth="146.0" text="Location" />
                <TableColumn fx:id="contactColumn" prefWidth="185.0" text="Contact" />
                <TableColumn fx:id="typeColumn" prefWidth="83.0" text="Type" />
                <TableColumn fx:id="customerIdColumn" prefWidth="110.0" text="Customer ID" />
                <TableColumn fx:id="userIdColumn" minWidth="2.0" prefWidth="110.0" text="User ID" />
            </columns>
        </TableView>
        <Button fx:id="customersButton" layoutX="39.0" layoutY="643.0" mnemonicParsing="false" onAction="#onCustomerButton" prefHeight="26.0" prefWidth="74.0" text="Customers" />
        <Button fx:id="reportsButton" layoutX="147.0" layoutY="644.0" mnemonicParsing="false" onAction="#onReportsButton" prefHeight="26.0" prefWidth="74.0" text="Reports" />
    </children>
</AnchorPane>
